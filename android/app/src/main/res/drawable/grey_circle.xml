<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <rotate
            android:fromDegrees="45"
            android:pivotX="50%"
            android:pivotY="50%">
            <shape android:shape="rectangle">
                <corners android:radius="100dp" />
                <size android:height="100dp" android:width="100dp"/> <!-- Line thickness and length -->
                <solid android:color="#4D000000" /> <!-- Color of the line (white) -->
            </shape>
        </rotate>
    </item>

</layer-list>

